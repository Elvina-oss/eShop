@model Category

@{
    ViewData["Title"] = "Информация о категории";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Подробнее о @Model.CategoryName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" readonly/>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                  

                    <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-right" asp-action="Редактировать" asp-route-id="@Model.Id"></a>
                    }
                        <a class="btn btn-outline-secondary" asp-action="Index">Показать все </a>
                    </div>

            </div>
        </div>
    </div>
