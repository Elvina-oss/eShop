@*Define Model*@

@model IEnumerable<Category>
@*Define view data*@

@{
    ViewData["Title"] = "List of Categories";
}

@*Write code*@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                    
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Редактировать</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Детали</a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</div>