@*@*Define Model*@

@model Perfume
@*Define view data*@

@{
    ViewData["Title"] = @Model.PerfumeName;
}

@*Write code*@

<div class="row">
    
    <div class="col-md-8 offset-2">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.PerfumeName
                                   
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.PerfumePictureURL" width="100%" alt="@Model.PerfumeName">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text"><b>Название: </b>
                        <p class="card-text"><b>Бренд: </b>
                            <a asp-controller="Perfumes" asp-action="Deatils" asp-route-id="Model.BrandId">
                                @Model.Brand.BrandName
                            </a>
                        </p>
                        <p class="card-text"><b>Год выпуска: </b>@Model.ReleaseYear</p>
                            
                        <p class="card-text">
                            <b>Категории:</b>
                            <div class="row"
                                @foreach(var category in Model.Category_Perfumes)
                                {
                                    <div class="column text-center">
                                        <br />
                                        <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.CategoryId">@category.Category.CategoryName</a>
                                    </div>
                                }
                             </div>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer ">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                <i class="bi bi-eye-fill"></i> Назад
                            </a>
                            <a class="btn btn-success text-white "
                                asp-controller="Orders"
                                asp-action="AddItemToShoppingCart"
                                asp-route-id="@Model.Id">
                                <i class="bi bi-cart-plus"></i> Добавить в корзину (Цена @Model.Price.ToString("c"))
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>

