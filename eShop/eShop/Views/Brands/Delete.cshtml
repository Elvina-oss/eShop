@model Brand

@{
    ViewData["Title"] = "Удалить бренд";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Удалить @Model.BrandName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info " style="max-width: 150px" id="BrandPicturePreview" />
                    </div> 
                    <div class="form-group">
                        <label asp-for="BrandPictureURL" class="control-label"></label>
                        <input asp-for="BrandPictureURL" class="form-control" readonly/>
                        <span asp-validation-for="BrandPictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandName" class="control-label"></label>
                        <input asp-for="BrandName" class="form-control" readonly/>
                        <span asp-validation-for="BrandName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value=" Удалить "class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index"> Назад </a>
                    </div>

            </div>
        </div>
    </div>

    @section Scripts{
        <script>
        $(document).ready(function () {
            var output = document.getElementById("BrandPicturePreview");
            output.src = $("#BrandPictureURL").val();
        })

        </script>
    }
